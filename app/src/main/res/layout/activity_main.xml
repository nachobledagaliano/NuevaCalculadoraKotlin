<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nacho.practicacalculadorakotlin.MainActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text=""
            android:textAlignment="textEnd"
            android:textColor="#121C25"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text=""
            android:maxLength="12"
            android:textAlignment="textEnd"
            android:textColor="#121C25"
            android:textSize="50sp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#121C25">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:id="@+id/botonMS"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="memoria"
                    android:backgroundTint="#9CB1BF"
                    android:textColor="#FFFFFF"
                    android:text="MS" />

                <Button
                    android:id="@+id/botonMMas"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="memoria"
                    android:backgroundTint="#9CB1BF"
                    android:textColor="#FFFFFF"
                    android:text="M+" />

                <Button
                    android:id="@+id/botonMMenos"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="memoria"
                    android:backgroundTint="#9CB1BF"
                    android:textColor="#FFFFFF"
                    android:text="M-" />

                <Button
                    android:id="@+id/botonMRecordar"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="memoria"
                    android:backgroundTint="#9CB1BF"
                    android:textColor="#FFFFFF"
                    android:text="MR" />

                <Button
                    android:id="@+id/botonMBorrar"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="memoria"
                    android:backgroundTint="#9CB1BF"
                    android:textColor="#FFFFFF"
                    android:text="MC" />

                <ImageButton
                    android:id="@+id/imageButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.65"
                    android:onClick="borrar"
                    android:backgroundTint="#2D587B"
                    android:textColor="#FFFFFF"
                    app:srcCompat="@android:drawable/ic_input_delete" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:id="@+id/button1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="pulsarNumero"
                    android:backgroundTint="#9CB1BF"
                    android:textColor="#FFFFFF"
                    android:text="1"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="pulsarNumero"
                    android:backgroundTint="#9CB1BF"
                    android:textColor="#FFFFFF"
                    android:text="2"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="pulsarNumero"
                    android:backgroundTint="#9CB1BF"
                    android:textColor="#FFFFFF"
                    android:text="3"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/buttonMas"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="pulsarOperacion"
                    android:backgroundTint="#2D587B"
                    android:textColor="#FFFFFF"
                    android:text="+"
                    android:textSize="24sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:id="@+id/button4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="pulsarNumero"
                    android:backgroundTint="#9CB1BF"
                    android:textColor="#FFFFFF"
                    android:text="4"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/button5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="pulsarNumero"
                    android:backgroundTint="#9CB1BF"
                    android:textColor="#FFFFFF"
                    android:text="5"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/button6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="pulsarNumero"
                    android:backgroundTint="#9CB1BF"
                    android:textColor="#FFFFFF"
                    android:text="6"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/buttonMenos"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="pulsarOperacion"
                    android:backgroundTint="#2D587B"
                    android:textColor="#FFFFFF"
                    android:text="-"
                    android:textSize="24sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:id="@+id/button7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="pulsarNumero"
                    android:backgroundTint="#9CB1BF"
                    android:textColor="#FFFFFF"
                    android:text="7"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/button8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="pulsarNumero"
                    android:backgroundTint="#9CB1BF"
                    android:textColor="#FFFFFF"
                    android:text="8"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/button9"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="pulsarNumero"
                    android:backgroundTint="#9CB1BF"
                    android:textColor="#FFFFFF"
                    android:text="9"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/buttonPor"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="pulsarOperacion"
                    android:backgroundTint="#2D587B"
                    android:textColor="#FFFFFF"
                    android:text="*"
                    android:textSize="24sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:id="@+id/button0"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="pulsarNumero"
                    android:backgroundTint="#9CB1BF"
                    android:textColor="#FFFFFF"
                    android:text="0"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/buttonDividir"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.333"
                    android:onClick="pulsarOperacion"
                    android:backgroundTint="#2D587B"
                    android:textColor="#FFFFFF"
                    android:text="/"
                    android:textSize="24sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.333"
                    android:onClick="negar"
                    android:backgroundTint="#9CB1BF"
                    android:textColor="#FFFFFF"
                    android:text="+/-"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/buttonPunto"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.333"
                    android:onClick="pulsarNumero"
                    android:backgroundTint="#9CB1BF"
                    android:textColor="#FFFFFF"
                    android:text="."
                    android:textSize="24sp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.65"
                    android:onClick="limpiarTodo"
                    android:backgroundTint="#9CB1BF"
                    android:textColor="#FFFFFF"
                    android:text="C"
                    android:textSize="24sp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.43"
                    android:onClick="igual"
                    android:backgroundTint="#2D587B"
                    android:textColor="#FFFFFF"
                    android:text="="
                    android:textSize="24sp" />
            </TableRow>

        </TableLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



        </TableLayout>


    </LinearLayout>
</android.support.constraint.ConstraintLayout>
